<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="15dp">


    <ImageView
        android:id="@+id/userAvatarImageView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_default_avatar" />


    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/userAvatarImageView"
        app:layout_constraintTop_toTopOf="@id/userAvatarImageView"
        app:layout_constraintBottom_toBottomOf="@id/userAvatarImageView"
        android:text="用户名"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/bookedTimeTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userAvatarImageView"
        android:text="预约于"
        android:textSize="13sp"/>
    <TextView
        android:id="@+id/bookedTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toRightOf="@id/bookedTimeTitleTextView"
        app:layout_constraintTop_toTopOf="@id/bookedTimeTitleTextView"
        app:layout_constraintBottom_toBottomOf="@id/bookedTimeTitleTextView"
        android:text="yyyy-MM-dd HH:mm:ss"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/chatActionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#2196F3"
        android:text="私信"
        android:textSize="15sp"
        android:textColor="#FFFFFF"/>

</androidx.constraintlayout.widget.ConstraintLayout>