<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="15dp">


    <TextView
        android:id="@+id/startTimeTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="起始时间："
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/startTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/startTimeTitleTextView"
        android:text="yyyy-MM-dd HH:mm:ss"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/endTimeTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/startTimeTitleTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="终止时间："
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/endTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/endTimeTitleTextView"
        app:layout_constraintLeft_toRightOf="@id/endTimeTitleTextView"
        android:text="yyyy-MM-dd HH:mm:ss"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/maxBookCountTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/endTimeTitleTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="预约容量："
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/maxBookCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/maxBookCountTitleTextView"
        app:layout_constraintLeft_toRightOf="@id/maxBookCountTitleTextView"
        android:text="0"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/nowBookCountTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        app:layout_constraintBaseline_toBaselineOf="@id/maxBookCountTitleTextView"
        app:layout_constraintLeft_toRightOf="@id/maxBookCountTitleTextView"
        android:text="已预约用户数："
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/nowBookCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/maxBookCountTitleTextView"
        app:layout_constraintLeft_toRightOf="@id/nowBookCountTitleTextView"
        android:text="0"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/bookActionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#FF0000"
        android:text="立即预约"
        android:textSize="15sp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/checkHadBookedUserTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#2196F3"
        android:text="查看已预约用户"
        android:textSize="15sp"
        android:textColor="#FFFFFF"/>

</androidx.constraintlayout.widget.ConstraintLayout>