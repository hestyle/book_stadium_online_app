<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="15dp">


    <ImageView
        android:id="@+id/stadiumImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_no_image" />

    <TextView
        android:id="@+id/stadiumNameTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/stadiumImageView"
        android:text="场馆名称："
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/stadiumNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/stadiumNameTitleTextView"
        android:text="stadiumName"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/stadiumAddressTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@id/stadiumImageView"
        app:layout_constraintLeft_toLeftOf="@+id/stadiumNameTitleTextView"
        android:text="场馆地址："
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/stadiumAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/stadiumAddressTitleTextView"
        app:layout_constraintLeft_toRightOf="@id/stadiumAddressTitleTextView"
        android:text="stadiumAddress"
        android:textSize="15sp"/>


    <TextView
        android:id="@+id/stadiumBookStartTimeTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/stadiumImageView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="预约起始时间："
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/stadiumBookStartTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/stadiumBookStartTimeTitleTextView"
        app:layout_constraintLeft_toRightOf="@id/stadiumBookStartTimeTitleTextView"
        android:text="yyyy-MM-dd HH:mm:ss"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/stadiumBookEndTimeTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/stadiumBookStartTimeTitleTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="预约终止时间："
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/stadiumBookEndTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/stadiumBookEndTimeTitleTextView"
        app:layout_constraintLeft_toRightOf="@id/stadiumBookEndTimeTitleTextView"
        android:text="yyyy-MM-dd HH:mm:ss"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/stadiumBookedTimeTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/stadiumBookEndTimeTitleTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="预约操作时间："
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/stadiumBookedTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/stadiumBookedTimeTitleTextView"
        app:layout_constraintLeft_toRightOf="@id/stadiumBookedTimeTitleTextView"
        android:text="yyyy-MM-dd HH:mm:ss"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/checkStadiumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/checkHadBookedUserTextView"
        android:background="#FF1493"
        android:text="查看体育场馆"
        android:textSize="15sp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/checkHadBookedUserTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@id/checkStadiumTextView"
        app:layout_constraintBottom_toTopOf="@+id/stadiumCommentTextView"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#2196F3"
        android:text="查看预约用户"
        android:textSize="15sp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/stadiumCommentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@+id/checkHadBookedUserTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#FFA500"
        android:text="评论场馆"
        android:textSize="15sp"
        android:textColor="#FFFFFF"/>

</androidx.constraintlayout.widget.ConstraintLayout>