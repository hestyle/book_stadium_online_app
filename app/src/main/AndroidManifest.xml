<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.edu.hestyle.bookstadiumonline">
    <!-- 网络访问权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- 读写访问权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Book_stadium_online_app">
        <activity android:name=".ui.book.StadiumCommentListActivity"></activity>
        <activity android:name=".ui.book.StadiumDetailActivity" />
        <activity android:name=".ui.book.StadiumSearchActivity" />
        <activity android:name=".ui.book.StadiumListActivity" />
        <activity android:name=".ui.book.StadiumCategoryDetailActivity" />
        <activity android:name=".ui.book.StadiumCategoryListActivity" />
        <activity android:name=".ui.book.BannerItemDetailActivity" />
        <activity android:name=".ui.my.setting.ServerSettingActivity" />
        <activity android:name=".ui.my.setting.SettingActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".BaseActivity" />
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>